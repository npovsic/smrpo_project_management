<div class="container">
    <div class="row page-title-wrapper">
        <a href="/#users" class="btn-flat back-button left">
            <i class="material-icons left back-icon">arrow_back</i>
        </a>

        <h5 class="page-title left">Uporabnik: {{userData.username}}</h5>
    </div>
    
    <div id="user-overview-basic-information" class="card scrollspy">
        <div class="card-content">
            <p class="card-title">Podatki uporabnika</p>

            <div class="row">
                <div class="col s12">
                    <p><span class="grey-text">Ime: </span>{{userData.firstName}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <p><span class="grey-text">Priimek: </span>{{userData.lastName}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <p><span class="grey-text">Uporabniško ime: </span>{{userData.username}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <p><span class="grey-text">Naslov elektronske pošte: </span>{{userData.email}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <p><span class="grey-text">Vloga v sistemu: </span>{{userRole.name}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="table-of-contents-wrapper hide-on-med-and-down">
    <ul class="section table-of-contents">
        <li><a href="#user-overview-basic-information">Podatki uporabnika</a></li>
    </ul>
</div>