<div class="container">
    <form method="post">
        <div class="row page-title-wrapper">
            <a href="/projects" class="btn-flat back-button left">
                <i class="material-icons left back-icon">arrow_back</i>
            </a>

            <h5 class="page-title left">Dodajanje uporabniške zgodbe</h5>

            <button class="waves-effect waves-light btn theme-color right" type="submit">
                <i class="material-icons left">save</i>
                Shrani
            </button>
        </div>

        <div class="card">
            <div class="card-content">
                <p class="card-title">Nova uporabniška zgodba</p>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <input id="title" name="title" type="text" class="validate" required>
                        <label for="title">Ime uporabniške zgodbe <abbr title="Obvezno polje">*</abbr></label>
                        {{#if errors.title}}
                        <span class="helper-text red-text">{{errors.title}}</span>
                        {{/if}}
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <input id="description" name="description" type="text" class="validate" required>
                        <label for="description">Opis<abbr title="Obvezno polje">*</abbr></label>
                        {{#if errors.description}}
                        <span class="helper-text red-text">{{errors.description}}</span>
                        {{/if}}
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <textarea id="acceptanceTests" name="acceptanceTests" class="materialize-textarea"></textarea>
                        <label for="acceptanceTests">Sprejemni testi</label>
                        {{#if errors.acceptanceTests}}
                        <span class="helper-text red-text">{{errors.acceptanceTests}}</span>
                        {{/if}}
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <select>
                            <option value="M">Must have</option>
                            <option value="S">Should have</option>
                            <option value="C">Could have</option>
                            <option value="W">Won't have this time</option>
                        </select>
                        <label for="priority">Prioriteta<abbr title="Obvezno polje">*</abbr></label>
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <label for="businessValue">Poslovna vrednost <abbr title="Obvezno polje">*</abbr></label>
                        <p class="range-field">
                            <input type="range" id="businessValue" min="0" max="10" />
                        </p>
                    </div>
                </div>


            </div>

        </div>
    </form>
</div>