<div class="container">
    <form method="post">
        <div class="row page-title-wrapper">
            <a href="/projects/{{projectData._id}}" class="btn-flat back-button left">
                <i class="material-icons left back-icon">arrow_back</i>
            </a>
            
            <h5 class="page-title left">{{layoutOptions.pageTitle}}</h5>

            <button class="waves-effect waves-light btn theme-color right" type="submit">
                <i class="material-icons left">save</i>
                Shrani
            </button>
        </div>
        
        <div class="card">
            <div class="card-content">
                <p class="card-title">Osnovni podatki</p>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <input id="name" name="name" type="text" class="validate" value="{{projectData.name}}" autofocus>
                        <label for="username">Ime projekta <abbr title="Obvezno polje">*</abbr></label>
                        {{#if errors.name}}
                            <span class="helper-text red-text">Ime projekta je obvezno.</span>
                        {{/if}}
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <textarea id="description" name="description" class="materialize-textarea">{{projectData.description}}</textarea>
                        <label for="textarea1">Opis</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
           <div class="card-content">
               <p class="card-title">Uporabniki na projektu</p>
               
               <div class="row">
                   <div class="input-field col s12">
                       <select name="projectLeader">
                           <option value="" disabled selected>Izberite produktnega vodjo</option>
                           {{#each usersSelectObjects.projectLeader}}
                               <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.title}}</option>
                           {{/each}}
                       </select>
                       <label for="projectLeader">Projektni vodja <abbr title="Obvezno polje">*</abbr></label>
                       
                       {{#if errors.projectLeader}}
                           <span class="helper-text red-text">Nastavite projektnega vodjo.</span>
                       {{/if}}
                   </div>
               </div>

               <div class="row">
                   <div class="input-field col s12">
                       <select name="scrumMaster">
                           <option value="" disabled selected>Izberite skrbnika metodologije</option>
                           {{#each usersSelectObjects.scrumMaster}}
                               <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.title}}</option>
                           {{/each}}
                       </select>
                       <label for="scrumMaster">Vodja metodologije <abbr title="Obvezno polje">*</abbr></label>

                       {{#if errors.scrumMaster}}
                           <span class="helper-text red-text">Nastavite vodjo metodologije.</span>
                       {{/if}}
                   </div>
               </div>

               <div class="row">
                   <div class="input-field col s12">
                       <select name="developers" multiple>
                           <option value="" disabled>Izberite razvijalce</option>
                           {{#each usersSelectObjects.developers}}
                               <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.title}}</option>
                           {{/each}}
                       </select>
                       <label for="developers">Razvijalci <abbr title="Obvezno polje">*</abbr></label>

                       {{#if errors.developers}}
                           <span class="helper-text red-text">Dodajte razvijalce.</span>
                       {{/if}}
                   </div>
               </div>
           </div>
        </div>
    </form>
</div>