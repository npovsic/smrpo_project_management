<header class="navbar-fixed {{#if options.tabs}}header-extended{{/if}} {{#if isSideMenuShown}}with-sidenav{{/if}}">
    <nav class="theme-color {{#if options.tabs}}nav-extended{{/if}} {{#if isSideMenuShown}}with-sidenav{{/if}}">
        <div class="nav-wrapper">
            <a href="/" class="navbar-title left">SMRPO</a>
            
            <div class="col s12 breadcrumbs-wrapper left">
                {{#each options.breadcrumbs}}
                    <a href="{{this.href}}" class="breadcrumb">{{this.title}}</a>
                {{/each}}
            </div>

            <ul id="nav-mobile" class="right">
                {{#each options.buttons}}
                    <li>
                        <a href="{{this.href}}">{{this.label}}</a>
                    </li>
                {{/each}}
                
                <li>
                    <a class="dropdown-trigger" href="#!" data-target="navbarDropdown">
                        <i class="material-icons left">account_circle</i>
                        
                        {{currentUser.username}}
                        
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                </li>
            </ul>
        </div>

        {{#if options.tabs}}
            <div class="nav-content">
                <ul class="tabs tabs-transparent tabs-fixed-width">
                    {{#each options.tabs}}
                        <li class="tab"><a href="{{this.href}}">{{this.label}}</a></li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
    </nav>

    <ul id="navbarDropdown" class="dropdown-content">
        <li><a href="/logout">Odjava</a></li>
    </ul>
</header>