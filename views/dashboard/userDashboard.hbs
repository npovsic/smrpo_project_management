<div class="container">
    <div class="row">
        <h3 class="row">Pozdravljeni {{currentUser.firstName}} {{currentUser.lastName}}</h3>
    </div>

    <div class="card">
        <div class="card-content">
            <p class="card-title">Aktivni sprinti</p>
            
            {{#each sprints}}
                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <p class="center grey-text">Trenutno nimate aktivnega Sprinta</p>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="card">
        <div class="card-content">
            <p class="card-title">Va≈°i projekti</p>

            {{#each projects}}
                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <a href="/projects/{{this._id}}" class="card-title">{{this.name}}</a>
                                <p>{{this.description}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <p class="center grey-text">Dodani niste na noben projekt</p>
                </div>
            {{/each}}
        </div>
    </div>
</div>