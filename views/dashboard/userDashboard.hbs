<div class="container">
    <div class="row">
        <h3 class="row">Pozdravljeni, {{currentUser.firstName}}{{#if currentUser.lastName}} {{currentUser.lastName}}{{/if}}.</h3>
    </div>

    <div class="card">
        <div class="card-content">
            <p class="card-title">Aktivni sprinti</p>
            
            {{#each sprints}}
                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <a href="" class="card-title">Aktiven sprint</a>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text"><b>Projekt: </b></span>{{this.project.name}}</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text"><b>Začetek sprinta: </b></span>{{formatDate this.sprint.startDate "D. MMMM YYYY"}}</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text"><b>Konec sprinta: </b></span>{{formatDate this.sprint.endDate "D. MMMM YYYY"}}</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text"><b>Hitrost sprinta: </b></span>{{this.sprint.velocity}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <p class="center grey-text">Trenutno nimate aktivnega Sprinta</p>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="card">
        <div class="card-content">
            <p class="card-title">Vaši projekti</p>

            {{#each projects}}
                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <a href="/projects/{{this._id}}" class="card-title">{{this.name}}</a>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text"><b>Opis: </b></span>{{this.description}}</p>
                                    </div>
                                </div>

                                <p class="users-label grey-text"><b>Vaše vloge v projektu:</b></p>

                                {{#each this.roles}}
                                    <div class="chip">
                                        {{this}}
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <p class="center grey-text">Dodani niste na noben projekt</p>
                </div>
            {{/each}}
        </div>
    </div>
</div>