<div class="container">
    <div class="row">
        <h3 class="row">Pozdravljeni, {{currentUser.firstName}}{{#if currentUser.lastName}} {{currentUser.lastName}}{{/if}}.</h3>
    </div>

    <div class="card">
        <div class="card-content">
            <p class="card-title">Aktivni sprinti</p>
            
            {{#each sprints}}
                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <a href="" class="card-title">{{this.project.name}}</a>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text">Začetek sprinta: </span>{{formatDate this.sprint.startDate "D. MMMM YYYY"}}</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text">Konec sprinta: </span>{{formatDate this.sprint.endDate "D. MMMM YYYY"}}</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text">Hitrost sprinta: </span>{{this.sprint.velocity}} točk</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <p class="center grey-text">Trenutno nimate aktivnih sprintov.</p>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="card">
        <div class="card-content">
            <p class="card-title">Vaši projekti</p>

            {{#each projects}}
                <div class="row suppress-bottom-margin">
                    <div class="col s12">
                        <div class="card">
                            <div class="card-content">
                                <a href="/projects/{{this._id}}" class="card-title">{{this.name}}</a>

                                <div class="row">
                                    <div class="col s12">
                                        <p><span class="grey-text">Opis: </span>{{#if this.description}}{{this.description}}{{else}}<span class="grey-text">/</span>{{/if}}</p>
                                    </div>
                                </div>

                                <p class="users-label grey-text">Vaše vloge v projektu:</p>

                                {{#each this.roles}}
                                    <div class="chip">
                                        {{this}}
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="row">
                    <p class="center grey-text">Trenutno ne sodelujete na nobenem projektu.</p>
                </div>
            {{/each}}
        </div>
    </div>
</div>