<div class="container slide-up">
    <form method="post">
        <div class="row page-title-wrapper">
            <a href="/projects/{{projectId}}" class="btn-flat back-button left">
                <i class="material-icons left back-icon">arrow_back</i>
            </a>

            <h5 class="page-title left">{{layoutOptions.pageTitle}}</h5>

            <button class="waves-effect waves-light btn theme-color right" type="submit">
                <i class="material-icons left">save</i>
                Ustvari
            </button>
        </div>

        <div id="sprint-edit-basic-information" class="card scrollspy">
            <div class="card-content">
                <p class="card-title">Podatki sprinta</p>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <input id="startDate" name="startDate" type="date" class="validate"
                               value="{{sprintData.startDate}}" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                        <label for="startDate">Za훾etek sprinta <abbr title="Obvezno polje">*</abbr></label>
                        {{#if errors.startDate}}
                            <span class="helper-text red-text">{{errors.startDate}}</span>
                        {{/if}}
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <input id="endDate" name="endDate" type="date" class="validate" value="{{sprintData.endDate}}"
                               required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                        <label for="endDate">Konec sprinta <abbr title="Obvezno polje">*</abbr></label>
                        {{#if errors.endDate}}
                            <span class="helper-text red-text">{{errors.endDate}}</span>
                        {{/if}}
                    </div>
                </div>

                <div class="row suppress-bottom-margin">
                    <div class="input-field col s12">
                        <input id="expectedVelocity" name="expectedVelocity" type="number" class="validate"
                               value="{{sprintData.expectedVelocity}}" required>
                        <label for="expectedVelocity">Pri훾akovana hitrost sprinta <abbr title="Obvezno polje">*</abbr></label>
                        {{#if errors.expectedVelocity}}
                            <span class="helper-text red-text">{{errors.expectedVelocity}}</span>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <div id="sprint-edit-basic-information" class="card scrollspy">
            <div class="card-content">
                <p class="card-title">Obstoje훾i sprinti</p>

                {{#if existingSprints}}
                    <table>
                        <tr>
                            <th>Za훾etek</th>
                            <th>Konec</th>
                        </tr>
                        {{#each existingSprints}}
                            <tr>
                                <td>{{formatDate this.startDate}}</td>
                                <td>{{formatDate this.endDate}}</td>
                            </tr>
                        {{/each}}
                    </table>
                {{else}}
                    <p class="center grey-text">Ni definiranih sprintov.</p>
                {{/if}}
            </div>
        </div>
    </form>
</div>

<div class="table-of-contents-wrapper hide-on-med-and-down">
    <ul class="section table-of-contents">
        <li><a href="#sprint-edit-basic-information">Podatki sprinta</a></li>
    </ul>
</div>